<%=  form_for(@post, html: {multipart: true}) do |f|  %>
    <ul>
        <% @post.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
    <% if @post.image.exists? %>
        <%= image_tag @post.image.url %><br/>
    <% end %>
    <%= f.label :image, "Attach a New Image" %><br />
    <%= f.file_field :image %>
    <%= f.submit %>
<% end %>
