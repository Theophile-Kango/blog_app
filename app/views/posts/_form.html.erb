<%= form_for @post do |f| %>
    <ul>
        <% @post.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
    <%= f.submit %>
<% end %>
