<%= content_for :page_title, "Home" %>
<% @post.each do |post| %>
    <h1><%= link_to post.title, post %></h1>
    <div class="post">
        <p><%= post.content %></p>
    </div>
<% end %>
<p id="new-user" ><%= link_to 'New user', new_author_path %></p>

<p class="count">We have <%= @post.count %> posts</p>

